import os
import shutil

hair_only_dir = "datasets/hair_only"
ddi_hair_dir = os.path.join(hair_only_dir, "ddi_hair")
dermnet_dir = os.path.join(hair_only_dir, "dermnet")
os.makedirs(ddi_hair_dir, exist_ok=True)
os.makedirs(dermnet_dir, exist_ok=True)

# for img_file in os.listdir(hair_only_dir):
#     if img_file.startswith("000") and img_file.lower().endswith(('.jpg', '.jpeg', '.png')):
#         src_path = os.path.join(hair_only_dir, img_file)
#         dst_path = os.path.join(ddi_hair_dir, img_file)
#         shutil.move(src_path, dst_path)  # Use shutil.copy if you want to copy instead of move
#         print(f"Moved {img_file} to ddi_hair folder")

# Move files starting with "hair" to dermnet
for img_file in os.listdir(hair_only_dir):
    if img_file.startswith("hair") and img_file.lower().endswith(('.jpg', '.jpeg', '.png')):
        src_path = os.path.join(hair_only_dir, img_file)
        dst_path = os.path.join(dermnet_dir, img_file)
        shutil.move(src_path, dst_path)
        print(f"Moved {img_file} to dermnet folder")
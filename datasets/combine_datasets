import os
import shutil

hair_only_dir = "datasets/hair_only"
os.makedirs(hair_only_dir, exist_ok=True)

# Copy from Kag_HSD (corrected path)
kag_hsd_dir = "datasets/Kag_HSD"
for img_file in os.listdir(kag_hsd_dir):
    if img_file.lower().endswith(('.jpg', '.jpeg', '.png')):
        src_path = os.path.join(kag_hsd_dir, img_file)
        dst_path = os.path.join(hair_only_dir, img_file)
        shutil.copy(src_path, dst_path)
        print(f"Copied {img_file} from Kag_HSD to hair_only folder")

# Copy from dermnet_hair
dermnet_hair_dir = "dermnet_hair"
for img_file in os.listdir(dermnet_hair_dir):
    if img_file.lower().endswith(('.jpg', '.jpeg', '.png')):
        src_path = os.path.join(dermnet_hair_dir, img_file)
        dst_path = os.path.join(hair_only_dir, img_file)
        shutil.copy(src_path, dst_path)
        print(f"Copied {img_file} from dermnet_hair to hair_only folder")